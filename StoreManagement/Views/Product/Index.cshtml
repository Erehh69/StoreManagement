@model IEnumerable<StoreManagementApp.Models.Product>

<h1>Product List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Stock</th> <!-- Added Stock column -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.Stock</td> <!-- Displaying Stock value -->
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")">Create New Product</a>
